<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ss.www.bluetoothble.TestActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/text_ToolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <ProgressBar
            android:id="@+id/test_ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test_count"
            android:text="采集点数"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/colorWhite"/>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <android.support.v7.widget.CardView
            android:id="@+id/test_card1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/colorBlue"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="数据一"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/test_data1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0000.00"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/test_card2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardElevation="4dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/colorBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据二"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/test_data2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0000.00"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/test_card3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardElevation="4dp"
            android:layout_alignParentRight="true"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/colorBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据三"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/test_data3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0000.00"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <TextView
        android:id="@+id/wrong_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:visibility="gone"
        android:textColor="@color/colorRed"
        android:text="该通道没有在线，请检查硬件"/>
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/test_chartView"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/test_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="max"/>
        <TextView
            android:id="@+id/test_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="min"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/test_average"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="ave"/>
        <TextView
            android:id="@+id/test_decrease"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="dec"/>
    </LinearLayout>
    <EditText
        android:id="@+id/test_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:inputType="number"
        android:hint="输入需要采集的通道号"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:stretchColumns="*">
        <TableRow>
            <Button
                android:id="@+id/test_last_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:text="上通道"
                android:background="@drawable/button_background" />
            <TextView
                android:id="@+id/test_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:text="通道1"/>
            <Button
                android:id="@+id/test_next_btn"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:text="下通道"
                android:background="@drawable/button_background"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择通道按确定开始采集"
        android:textSize="15sp"/>
    <Button
            android:id="@+id/test_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确  定"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_background"/>
</LinearLayout>
